page {
  height: auto;
}

/*发布按钮*/

.wq-block-button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99999;
  padding: 20rpx;
  background: #fff;
}

.wq-block-button {
  height: 80rpx;
  line-height: 80rpx;
  border: 0;
  border-radius: 0;
  font-size: 32rpx;
  color: #fff;
  background: #3fb57a;
  text-align: center;
}

/*表单*/

.wq-form-agreement {
  margin: 10rpx 20rpx;
}

.wq-form-agreement-wrapper {
  display: block;
  font-size: 28rpx;
  color: #9e9e9e;
  text-decoration: underline;
}

.wq-form-agreement-checkbox {
  transform: scale(0.6);
  width: 50rpx;
  height: 40rpx;
}

.wq-form-agreement-link {
  display: inline;
  color: #586c94;
}

.wq-form-input-cell {
  position: relative;
  margin-bottom: 10rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  overflow: hidden;
}

.wq-form-input-box {
  height: 60rpx;
  line-height: 60rpx;
  color: #9e9e9e;
}

.wq-form-input-area {
  width: 100%;
  height: 360rpx;
  color: #9e9e9e;
}

.wq-form-input-area-count {
  font-size: 26rpx;
  color: #9e9e9e;
  text-align: right;
}

.wq-form-input-cell-label {
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  padding-right: 10rpx;
}

.wq-form-input-cell-text {
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #9e9e9e;
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-form-input-cell-image {
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx 0;
}

.wq-form-input-cell-picker {
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
  color: #9e9e9e;
}

.wq-form-input-cell-picker::after {
  content: " ";
  position: absolute;
  top: 50%;
  right: 30rpx;
  height: 15rpx;
  width: 15rpx;
  margin-top: -8rpx;
  border-width: 5rpx 5rpx 0 0;
  border-color: #9e9e9e;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.wq-form-input-cell-title {
  margin-bottom: 20rpx;
}

.wq-form-input-cell-title-small {
  font-size: 28rpx;
  color: #9e9e9e;
}

.wq-form-input-cell-tag {
  display: inline-block;
  margin: 0 11rpx 20rpx 0;
  padding: 0 30rpx;
  border: 1rpx dashed #9e9e9e;
  vertical-align: middle;
}

.wq-form-input-cell-tag.active {
  border: 1rpx solid #3fb57a;
  color: #fff;
  background: #3fb57a;
}
