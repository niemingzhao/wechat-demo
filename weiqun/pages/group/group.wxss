/*用户身份*/

.wq-profile {
  position: relative;
  height: 270rpx;
  margin-top: 10rpx;
}

.wq-profile-bg {
  width: 100%;
  height: 100%;
}

.wq-profile-avatar {
  position: absolute;
  top: 20rpx;
  left: 50%;
  width: 180rpx;
  height: 180rpx;
  margin-left: -90rpx;
  border-radius: 50%;
}

.wq-profile-name {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*发布按钮*/

.wq-block-button {
  height: 90rpx;
  line-height: 90rpx;
  margin: 30rpx 20rpx;
  border: 0;
  border-radius: 0;
  font-size: 32rpx;
  color: #fff;
  background: #3fb57a;
  text-align: center;
}
