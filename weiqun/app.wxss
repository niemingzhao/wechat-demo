page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.5;
  background: #f0eff5;
}

.wq-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

.wq-wrapper {
  flex: auto;
  overflow-x: hidden;
  overflow-y: scroll;
}

.wq-title {
  font-size: 26rpx;
  line-height: 2.5;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*搜索框*/

.wq-search-bar {
  height: 90rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.wq-search-bar-icon {
  flex: none;
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx 0 40rpx;
}

.wq-search-bar-input {
  flex: auto;
  height: 100%;
}

.wq-search-bar-cancel {
  flex: none;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  color: #3fb57a;
}

/*选择条*/

.wq-select-bar {
  height: 90rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.wq-select-bar-icon {
  flex: none;
  width: 30rpx;
  height: 30rpx;
  padding: 30rpx 40rpx;
}

.wq-select-bar-panel {
  flex: auto;
  border-right: 1rpx solid #bbb;
  overflow-x: scroll;
}

.wq-select-bar-belt {
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
}

.wq-select-bar-item {
  padding: 10rpx 40rpx;
}

.wq-select-bar-item.active {
  color: #3fb57a;
}

/*加载更多*/

.wq-loadmore {
  font-size: 26rpx;
  line-height: 2.5;
  color: #9e9e9e;
  text-align: center;
}

/*轮播图*/

.wq-swiper {
  height: 220rpx;
}

.wq-swiper-image {
  width: 100%;
  height: 100%;
}

/*菜单网格*/

.wq-menu-grid {
  height: 420rpx;
  white-space: nowrap;
}

.wq-menu-grid-view {
  width: 100%;
  height: 420rpx;
  display: inline-block;
}

.wq-menu-grid-panel {
  height: 420rpx;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}

.wq-menu-grid-item {
  width: 25%;
  height: 50%;
  text-align: center;
}

.wq-menu-grid-item-icon {
  width: 75rpx;
  height: 75rpx;
  margin-top: 22%;
}

.wq-menu-grid-item-title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*弹出层*/

.wq-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99999;
  background: #000;
  opacity: 0.6;
}

.wq-prompt {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99999;
  height: 600rpx;
  background: #fff;
  text-align: center;
}

.wq-prompt-image {
  width: 300rpx;
  height: 300rpx;
  margin: 100rpx 0 20rpx;
}

.wq-prompt-title {
  font-size: 26rpx;
}

/*列表面板*/

.wq-list-card {
  padding: 20rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.wq-list-card-line {
  display: flex;
  align-items: center;
}

.wq-list-card-icon {
  flex: none;
  width: 120rpx;
  height: 120rpx;
}

.wq-list-card-text-1 {
  flex: auto;
  margin-left: 20rpx;
}

.wq-list-card-text-1-1 {
  font-size: 26rpx;
  line-height: 2;
  color: #9e9e9e;
  overflow: hidden;
}

.wq-list-card-text-1-1-1 {
  float: left;
  max-width: 300rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-list-card-text-1-1-2 {
  float: right;
  max-width: 200rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-list-card-text-1-2 {
  line-height: 2;
  max-width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-list-card-text-2 {
  flex: auto;
  margin-top: 20rpx;
  font-size: 26rpx;
  line-height: 2;
  overflow: hidden;
}

.wq-list-card-text-2-1 {
  float: left;
  margin-right: 30rpx;
  max-width: 240rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-list-card-text-2-2 {
  float: left;
  color: #9e9e9e;
  max-width: 340rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.wq-list-card-qrcode {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx 0;
}
